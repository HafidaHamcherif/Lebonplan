<head>
    <link rel="stylesheet" href="/css/storeproducts.css">
</head>
{{> navigateur}}


<main>
    {{#if hasProducts }}
        <div class="container my-3">
            {{#each prods }}
                <div class="card mb-3">
                    <div class="row no-gutters">
                        <div class="col-md-4 pr-5">
                            <img src="/{{this.imageUrl}}" class="card-img" alt="...">
                        </div>
                        <div class="col-md-8 mt-5">
                            <div class="card-body">
                                <h5 class="card-title">{{this.name}}</h5>
                                <p class="card-text">{{this.price}}$</p>
                                <p class="card-text">{{this.description}}</p>
                                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                                <a href="/products/{{this._id}}">
                                    <button class="btn btn-outline-success px-5" id="">Details</button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    {{else}}
        <h1>Be the first one to upload un product</h1>
    {{/if}}
</main>
