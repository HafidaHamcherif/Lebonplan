<link rel="stylesheet" href="/css/adminproducts.css">
{{> navigateur}}

<main class="container">
    <div class="card-deck px-0">
        {{#if hasProducts }}
            <div class="row">
                {{#each prods }}
                    <div class="col-lg-3 col-md-6">
                        <div class="card mx-0">
                            <img src="/{{this.imageUrl}}" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">{{this.name}} <small class="text-muted"> {{this.price}}$</small>
                                </h5>
                                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        {{else}}
            <h1>No items added to your collection</h1>
        {{/if}}
    </div>
</main>
